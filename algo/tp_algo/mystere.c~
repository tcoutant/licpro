# include <stdio.h>
# include <string.h>
# define const 10 		/*declaration des constantes*/
int n, nb;
/*commentaire*/
int mystere(int n)
{
if (n==0)
return 1;
else
return mystere(n-1) +2*(n-1)+1;
}
/*commentaire*/
int main ()			
{
printf(" donner un nombre entier \n");
scanf("%d",&nb);
printf("le nombre mystere est %d .\n",mystere(nb));
return 0;
}
/*commentaire*/

