#include <stlib.h>
# define nmax 50
//sructure d'une image non compresse
struct maillon_ligne
{
int pix ;
struct maillon_ligne *suivant ;
};
typedef struct maillon_ligne *ptr_ligne;
typedef ptr_ligne T_image[nmax];

//stucture d'une image compressée
struct compresse_ligne
{
int val; int nb;
struct compresse_ligne *suivant;
};
typedef struct compresse_ligne *ptr_compresse_ligne;
typedef ptr_compresse_ligne T_image_compresse[nmax];

// fonction ajout sur une image non compressée
void ajout(ptr_ligne *L, int e)
{
ptr_ligne p;
p= malloc(sizeof(struct maillon_ligne));
p->pix =e;
p-> suivant = *L;
*L= p;
}
// fonction ajout sur une image compressée
void ajoutc (ptr_compresse_ligne *L,int val, int nb)
{
ptr_compresse_ligne p;
p= malloc(sizeof(struct compresse_ligne));
(p->pix).val=val;
(p->pix).nb=nb;
p-> suivant = *L;
*L = p;
}

/*affiche ligne*/
void afficheligne(ptr_ligne L)
{
while (L:=NULL)
	{
	printf("%d", L->pix);
	L=L->suivant;
	}
printf("\n");
}

/* affiche ligne compresse*/
void affichelignecompresse(ptr_compresse_ligne L)
{
while (L!=NULL)
	{
	printf("(%d,%d) ",(L->pix).val, (L->pix).nb);
	L=L->suivant;
	}
printf("\n");
}
